CREATE TABLE `preguntas` (
    _id INTEGER AUTO INCREMENT PRIMARY KEY,
    `pregunta` VARCHAR(256),
    `respuesta_correcta` VARCHAR(32) NOT NULL,
    `respuesta_incorrecta_1` VARCHAR(32) NOT NULL,
    `respuesta_incorrecta_2` VARCHAR(32) NOT NULL,
    `respuesta_incorrecta_3` VARCHAR(32) NOT NULL,
    `dificultad` CHARACTER NOT NULL DEFAULT 'F',
    `categoria` CHARACTER NOT NULL DEFAULT 'H',
    `imagen` VARCHAR(32) DEFAULT "NULL",
    `sonido` VARCHAR(32) DEFAULT "NULL",
    `tipo` INTEGER NOT NULL
);

--Dificultad

--F: Facil
--D: Dificil


--Categoria

--H: Historia
--C: Música
--A: Artistas


-- tipo

-- 1: texto
-- 2: imagen
-- 3: sonido



